<configuration xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchemainstance"
               xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
    
    <external-component-plugins>
        <target-component>org.exoplatform.webui.ext.UIExtensionManager</target-component>
        <component-plugin>
            <name>Add RightClick Action</name>
            <set-method>registerUIExtensionPlugin</set-method>
            <type>org.exoplatform.webui.ext.UIExtensionPlugin</type>
            <init-params>
                <object-param>
                    <name>RestoreWikiPage</name>
                    <object type="org.exoplatform.webui.ext.UIExtension">
                        <field name="type">
                            <string>org.exoplatform.ecm.dms.UIWorkingArea</string>
                        </field>
                        <field name="rank">
                            <int>109</int>
                        </field>
                        <field name="name">
                            <string>RestoreWiki</string>
                        </field>
                        <field name="component">
                            <string>com.acme.RestoreWikiManageComponent</string>
                        </field>
                        <field name="category">
                            <string>ItemContextMenu</string>
                        </field>
                    </object>
                </object-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>

    <external-component-plugins>
        <target-component>org.exoplatform.services.resources.ResourceBundleService</target-component>
        <component-plugin>
            <name>UI Extension</name>
            <set-method>addResourceBundle</set-method>
            <type>org.exoplatform.services.resources.impl.BaseResourceBundlePlugin</type>
            <init-params>
                <values-param>
                    <name>init.resources</name>
                    <value>locale.com.acme.RestoreWikiPage</value>
                </values-param>
                <values-param>
                    <name>portal.resource.names</name>
                    <value>locale.com.acme.RestoreWikiPage</value>
                </values-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>

</configuration>